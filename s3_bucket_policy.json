{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AWSBillingReportsPolicy",
        "Effect": "Allow",
        "Principal": {
          "Service": "billingreports.amazonaws.com"
        },
        "Action": [
          "s3:GetBucketAcl",
          "s3:GetBucketPolicy"
        ],
        "Resource": "arn:aws:s3:::YOUR-BUCKET-NAME"
      },
      {
        "Sid": "AWSBillingReportsPutObject",
        "Effect": "Allow",
        "Principal": {
          "Service": "billingreports.amazonaws.com"
        },
        "Action": "s3:PutObject",
        "Resource": "arn:aws:s3:::YOUR-BUCKET-NAME/*",
        "Condition": {
          "StringEquals": {
            "aws:SourceAccount": "YOUR-AWS-ACCOUNT-ID"
          }
        }
      }
    ]
  }
  